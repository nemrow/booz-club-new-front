<div class="row">
  <div class="col-md-12 logo">
    <img src="https://s3-us-west-2.amazonaws.com/booz-club/assets/logo.jpg">
  </div>
</div>

<h1>{{model.boozType}}</h1>
{{#if searchInProgress}}
  <div class="progress">
    <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: {{percentComplete}}%;">
    </div>
  </div>
{{/if}}

{{#each completedSearches as |search|}}
  <div class="row">
    <div class="col-md-12 col-sm-12 col-lg-12">
      <div class="panel panel-{{search.statusClass}}">
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-9 col-md-9 col-lg-9">
              <p>{{search.name}}</p>
              <small>
                {{search.address}}
                <br>
                {{search.phone}}
              </small>
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 place-icon-container">
              {{#if search.isComplete}}
                {{fa-icon search.statusIconClass}}
              {{else}}
                <div class="loader-inner ball-clip-rotate"><div></div></div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}

