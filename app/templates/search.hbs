<div class="row">
  <div class="col-md-12 logo">
    {{#link-to "main"}}
      <img src="https://s3-us-west-2.amazonaws.com/booz-club/assets/logo.jpg">
    {{/link-to}}
  </div>
</div>

<h1>{{search.boozType}}</h1>
{{#if searchInProgress}}
  <div class="progress">
    <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: {{percentComplete}}%;">
    </div>
  </div>
{{/if}}

{{#each search.sortedPlaces key="id" as |place|}}
  <div class="row place-container">
    <div class="col-md-12 col-sm-12 col-lg-12">
      <div class="panel panel-info panel-{{place.statusClass}}">
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-9 col-md-9 col-lg-9">
              <p>{{place.name}}</p>
              <small>
                {{place.address}}
                <br>
                {{place.phone}}
              </small>
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 place-icon-container">
              {{#if place.isComplete}}
                {{fa-icon place.statusIconClass}}
              {{else}}
                <div class="loader-inner ball-clip-rotate"><div></div></div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}

